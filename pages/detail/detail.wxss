@import "/wxParse/wxParse.wxss";

.detail-wrapper {
  background-color: #eee;
  height: 100vh;
}

.block {
  margin-top: 20rpx;
  background-color: white;
  padding: 30rpx;
}

.header-wrapper {
  
}

.header-title {
  margin-bottom: 20rpx;
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
}

.header-others {
  display: inline-flex;
  justify-content: space-between;
  font-size: 28rpx;
  width: 100%;
}

.header-department {
  flex: 1;
  color: #777;
}

.header-update-time {
  flex: 1;
  text-align: right;
  color: rgb(0, 153, 153);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgb(0, 153, 153);
  margin-bottom: 20rpx;
}

.title:before {
  content: '|';
  background: rgb(0, 153, 153);
  color: transparent;
  width: 12rpx;
  height: 100%;
  display: inline-block;
  margin-right: 15rpx;
  border-radius: 10rpx;
}

.desc-wrapper {

}

.desc-msg {
  font-weight: 500;
  font-size: 38rpx;
  color: #111;
}

.content-wrapper {

}

.content-msg view {
  overflow: hidden;
}

.contact-wrapper {
  background: rgba(0, 153, 153, .8);
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  border-radius: 50%;
}

.contact-btn {
  padding: 25rpx;
}

.download-file {
  font-size: 28rpx;
}

.file-item {
  line-height: 20px;
}