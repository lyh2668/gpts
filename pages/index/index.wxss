@import '../../common/css/stylesheet.wxss';

/**index.wxss**/
.tabs {
  width: 100%;
  height: 44px;
  position: fixed;
  bottom: 0;
  z-index: 1;
  background: white;
  border-top: 1px solid #eee;
  display: flex;
}

.tab-item {
  flex: 1;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  line-height: 44px;
  color: #333
}

.tab-item-checked {
  color: rgb(0, 153, 153);
}

.icon-index {
  font-size: 44rpx;
}

.icon-filter {
  font-size: 44rpx;
}

.header-title {
  height: 88rpx;
  line-height: 88rpx;
  background: white;
  color: black;
  font-size: 32rpx;
  padding-left: 40rpx;
  /*position: relative;*/
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.index-content {
  width: 100%;
  background: #eee;
  margin-top: 44px;
  border-top: 5rpx solid #eee;
}

/* 这个样式有问题 */
.header-button {
  position: absolute;
  right: 60rpx;
  top: 11rpx;
  line-height: 34rpx;
  font-size: 34rpx;
  font-weight: 600;
  padding: 15rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(0, 153, 153, 0.8);
  border: 1px solid rgb(0, 153, 153);
  color: white;
}

.header-button:active {
  opacity: 0.6;
}

.content {
  /*padding-top: 44px;*/
  padding-bottom: 48px;
  z-index: 0;
  background-color: #eee;
}

.list-item {
  margin: 15rpx 0;
  padding: 20rpx;
  position: relative;
  background: white;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.list-item .title {
  margin: 20rpx 0;
}

.list-item .title:before {
  content: '|';
  background: rgb(0, 153, 153);
  color: transparent;
  width: 12rpx;
  height: 100%;
  display: inline-block;
  margin-right: 15rpx;
  border-radius: 10rpx;
}

.child-list {
  display: flex;
  flex-wrap: wrap;
  /*white-space: nowrap;*/
  padding-bottom: 45rpx;
}

.child-item {
  font-size: 34rpx;
  border: 1px solid rgba(7, 17, 27, 0.6);
  border-radius: 30rpx;
  padding: 10rpx 15rpx;
  color: #333;
  margin-bottom: 20rpx;
  background-color: white;
}

.child-item-checked {
  font-size: 34rpx;
  border: 1px solid rgb(0, 153, 153);
  border-radius: 30rpx;
  padding: 10rpx 15rpx;
  color: rgb(0, 153, 153);
  margin-bottom: 20rpx;
  background-color:  rgba(0, 153, 153, 0.1);
}

.child-item-ck {
  padding: 6rpx 10rpx;
  margin: 10rpx 0;
  border: 1px solid #eee;
}

.child-item:not(:last-child) {
  margin-right: 20rpx;
}

.child-item-checked:not(:last-child) {
  margin-right: 20rpx;
}

.ck-all {
  position: absolute;
  font-size: 24rpx;
  right: 50rpx;
  bottom: 20rpx;
}

.dialog-content {
  position: fixed;
  width: 600rpx;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  background: white;
  z-index: 10;
  padding: 30rpx;
}

.dialog-item {
  margin: 20rpx;
  line-height: 60rpx;
}

.dialog-msg {
  /*display: flex;
  justify-content: space-between;*/
  margin: -25rpx 10rpx 20rpx 10rpx;
  padding-top: 10px;
}

.dialog-children-wrapper {
  display: flex;
  flex-wrap: wrap;
  margin: 10px 0;
}

.dialog-children-item {
  margin-right: 20px;
  line-height: 20px;
  font-size: 16px;
  color: #777;
}

.dialog-children-item:last-child {
  margin-right: 0
}

.dialog-button-group .dialog-confirm {
  color:white;
  background-color:rgb(0, 153, 153);
  height:36px;
  line-height:36px;
  font-size:16px;
}

.dialog-confirm:hover {
  opacity: .7;
}

.cover-wrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  overflow: hidden;
  top: 0;
  left: 0;
  background: rgba(7, 17, 27, 0.3);
  z-index: 1;
}

.item-tips {
  line-height: 32rpx;
  text-align: center;
  border: 1px solid rgb(0, 153, 153);
  border-radius: 18rpx;
  padding: 4rpx 6rpx;
  font-size: 24rpx;
  color: rgb(0, 153, 153);
  margin-left: 10px;
  vertical-align: middle;
}

.contact-wrapper {
  background: rgba(0, 153, 153, .8);
  position: fixed;
  right: 30rpx;
  bottom: 110rpx;
  border-radius: 50%;
}

.contact-btn {
  padding: 25rpx;
}